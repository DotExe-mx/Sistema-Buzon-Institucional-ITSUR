@model SIS_QSF.Models.Solicitud

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Solicitud</h4>
<hr />
<div class="row">
    <form asp-controller="Solicitud" method="post" enctype="multipart/form-data" asp-action="Create">
        
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class=" form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class=" form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mx-1">
                    <label>Indica el departamento de tu solicitud</label>
                    <select asp-for="Depa" name="Depa" id="Depa" class="form-control">
                        <option selected>Departamentos</option>
                        <option value="1">Calidad</option>
                        <option value="2">Idiomas</option>
                        <option value="3">Finanzas</option>
                        <option value="4">Becas</option>
                    </select>
                </div>
                <div class="row">
                    <div class="form-group">
                        <p>Quieres subir tu evidencia?</p>
                        <input type="file" name="file" id="">
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mt-3 text-center">
            <div class="col">
                <div class=" form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
    

<table class="table">
    <thead>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    
